#!/usr/bin/env bash
# This script creates an RSA key pair

# Set the filename for the private key
private_key="school"

# Set the number of bits for the key
bits=4096

# Set the passphrase
passphrase="betty"

# Generate the key pair
ssh-keygen -t rsa -b "$bits" -C "Generated by script" -f "$private_key" -N "$passphrase"

# Display information about the generated key pair
echo "Key pair generated successfully."
echo "Private key saved in: $private_key"
echo "Public key saved in: ${private_key}.pub"
